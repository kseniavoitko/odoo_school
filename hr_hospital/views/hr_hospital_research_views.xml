<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hospital_research_form" model="ir.ui.view">
        <field name="name">hr_hospital.research.form</field>
        <field name="model">hr_hospital.research</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="active"/>
                            <field name="name"/>
                            <field name="date"/>
                            <field name="research_type_id"/>
                        </group>
                        <group>
                            <field name="patient_id"/>
                            <field name="patient_telephone_number"/>
                            <field name="doctor_id"/>
                            <field name="sample_id"/>
                        </group>
                        <field name="conclusion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_research_tree" model="ir.ui.view">
        <field name="name">hr_hospital.research.tree</field>
        <field name="model">hr_hospital.research</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="patient_id"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_research_action" model="ir.actions.act_window">
        <field name="name">Hospital Researches</field>
        <field name="res_model">hr_hospital.research</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('patient_id','=', active_id)]</field>
    </record>

    <record id="hr_hospital_research_search" model="ir.ui.view">
        <field name="name">hr_hospital.research.search</field>
        <field name="model">hr_hospital.research</field>
        <field name="arch" type="xml">
            <search>
                <field name="patient_id" filter_domain="[('name','ilike',self)]"/>
                <field name="patient_telephone_number"/>
                <filter name="groupby_sample_type" string="Sample Type"
                        context="{'group_by': 'sample_type_id'}"/>
            </search>
        </field>
    </record>

     <record id="hr_hospital_research_pivot" model="ir.ui.view">
        <field name="name">hr_hospital.research.pivot</field>
        <field name="model">hr_hospital.research</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="date" interval="month" type="row"/>
                <field name="doctor_id" type="row"/>
                <field name="research_type_id" type="col"/>
                <field name="qty" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="hr_hospital_research_act_window" model="ir.actions.act_window">
        <field name="name">Researches</field>
        <field name="res_model">hr_hospital.research</field>
        <field name="view_mode">tree,form,search,pivot</field>
    </record>

    <menuitem name="Researches"
              id="hr_hospital.research"
              parent="hr_hospital.menu_other"
              action="hr_hospital_research_act_window"/>
</odoo>
