<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hr_hospital.doctor.form</field>
        <field name="model">hr_hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="active"/>
                            <field name="name"/>
                            <field name="specialization"/>
                            <field name="is_intern"/>
                            <field name="intern_ids" mode="kanban"
                                   attrs="{'invisible': [('is_intern','=',True)]}"/>
                            <field name="mentor_id"
                                   attrs="{'invisible': [('is_intern','=',False)]}"/>
                        </group>
                        <group>
                            <field name="photo"/>
                            <field name="gender"/>
                            <field name="telephone_number"/>
                            <field name="email"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Visits">
                            <field name="visit_ids">
                                <tree editable="bottom">
                                    <field name="visit_date"/>
                                    <field name="patient_id"/>
                                    <field name="doctor_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Activity History">
                            <field name="activity_history"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hr_hospital.doctor.tree</field>
        <field name="model">hr_hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="active"/>
                <field name="name"/>
                <field name="specialization"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_doctor_kanban" model="ir.ui.view">
        <field name="name">hr_hospital.doctor.kanban</field>
        <field name="model">hr_hospital.doctor</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="specialization">
                <field name="name"/>
                <field name="specialization"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_card_header_title">
                                <div>
                                    <p>
                                        <field name="name"/>
                                    </p>
                                    <p>
                                        <field name="specialization"/>
                                    </p>
                                </div>
                            </div>

                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle btn"
                                   data-toggle="dropdown" href="#">
                                    <span class="fa fa-ellipsis-v"
                                          aria-hidden="true"/>
                                </a>
                                <div class="o_kanban_card_manage_setting row mt16">
                                    <div class="dropdown-menu" role="menu">
                                        <t t-if="widget.editable">
                                            <a role="menuitem" type="edit"
                                               class="dropdown-item">Edit
                                            </a>
                                        </t>
                                        <t t-if="widget.deletable">
                                            <a role="menuitem"
                                               type="delete"
                                               class="dropdown-item">Delete
                                            </a>
                                        </t>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-12" style="height: 15px;"/>

                            <div class="container o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6 o_kanban_primary_left">
                                        <button class="btn btn-primary"
                                                string="Create Visit"
                                                name="%(hr_hospital.hr_hospital_create_visit_from_doctor_action)d"
                                                type="action">
                                            <span>Create Visit</span>
                                        </button>
                                    </div>
                                    <div class="col-6 o_kanban_primary_right">
                                        <field name="patient_ids"
                                               widget="many2many_tags"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="hr_hospital_doctor_search" model="ir.ui.view">
        <field name="name">hr_hospital.doctor.search</field>
        <field name="model">hr_hospital.doctor</field>
        <field name="arch" type="xml">
            <search>
                <filter name="isIntern" string="is intern" domain="[('is_intern','=',True)]"/>
                <filter name="isMentor" string="is mentor" domain="[('is_intern','=',False)]"/>
            </search>
        </field>
    </record>

    <record id="hr_hospital_doctor_act_window" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hr_hospital.doctor</field>
        <field name="view_mode">tree,form,kanban,search</field>
    </record>

    <menuitem name="Doctors"
              id="hr_hospital.doctor"
              parent="hr_hospital.menu_root"
              action="hr_hospital_doctor_act_window"/>
</odoo>
