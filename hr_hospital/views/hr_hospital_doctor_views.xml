<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hr_hospital.doctor.form</field>
        <field name="model">hr_hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="active"/>
                            <field name="name"/>
                            <field name="specialization"/>
                            <field name="is_intern"/>
                            <field name="intern_ids" mode="kanban"
                                   attrs="{'invisible': [('is_intern','=',True)]}"/>
                            <field name="mentor_id"
                                   attrs="{'invisible': [('is_intern','=',False)]}"/>
                        </group>
                        <group>
                            <field name="photo"/>
                            <field name="gender"/>
                            <field name="telephone_number"/>
                            <field name="email"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Visits">
                            <field name="visit_ids">
                                <tree editable="bottom">
                                    <field name="visit_date"/>
                                    <field name="patient_id"/>
                                    <field name="doctor_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hr_hospital.doctor.tree</field>
        <field name="model">hr_hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="active"/>
                <field name="name"/>
                <field name="specialization"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_doctor_kanban" model="ir.ui.view">
        <field name="name">hr_hospital.doctor.kanban</field>
        <field name="model">hr_hospital.doctor</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="specialization">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div>
                                <strong>
                                    <field name="name"/>
                                </strong>
                                <div class="text-right">
                                    <button name="%(hr_hospital.hr_hospital_create_visit_from_doctor_action)d"
                                            string="Create Visit"
                                            type="action" class="btn fa fa-edit"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="hr_hospital_doctor_search" model="ir.ui.view">
        <field name="name">hr_hospital.doctor.search</field>
        <field name="model">hr_hospital.doctor</field>
        <field name="arch" type="xml">
            <search>
                <filter name="isIntern" string="is intern" domain="[('is_intern','=',True)]"/>
                <filter name="isMentor" string="is mentor" domain="[('is_intern','=',False)]"/>
            </search>
        </field>
    </record>

    <record id="hr_hospital_doctor_act_window" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hr_hospital.doctor</field>
        <field name="view_mode">tree,form,kanban,search</field>
    </record>

    <menuitem name="Doctors"
              id="hr_hospital.doctor"
              parent="hr_hospital.menu_root"
              action="hr_hospital_doctor_act_window"/>
</odoo>
