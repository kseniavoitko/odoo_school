<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hospital_patient_form" model="ir.ui.view">
        <field name="name">hr_hospital.patient.form</field>
        <field name="model">hr_hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="%(hr_hospital.hr_hospital_create_visit_from_patient_action)d"
                            string="Create Visit" type="action"
                            class="oe_stat_button"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(hr_hospital.hr_hospital_visit_action)d"
                                string="Visits" type="action"
                                class="oe_stat_button" icon="fa-eye"/>
                        <button name="%(hr_hospital.hr_hospital_research_action)d"
                                string="Researches" type="action"
                                class="oe_stat_button" icon="fa-edit"/>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"/>
                    <group>
                        <group>
                            <field name="active"/>
                            <field name="photo"/>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="telephone_number"/>
                            <field name="gender"/>
                            <field name="birthday"/>
                            <field name="age"/>
                            <field name="doctor_id"/>
                            <field name="grade_of_sick"/>
                        </group>
                        <group string="Passport details">
                            <field name="passport_id"/>
                            <field name="passport_date"/>
                            <field name="passport_authority"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="History of personal doctor">
                            <field name="history_doctor_ids">
                                <tree>
                                    <field name="date"/>
                                    <field name="patient_id"/>
                                    <field name="doctor_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="History of sickness">
                            <field name="sickness_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="sickness_category_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_patient_tree" model="ir.ui.view">
        <field name="name">hr_hospital.patient.tree</field>
        <field name="model">hr_hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="active"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_patient_act_window" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hr_hospital.patient</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Patients"
              id="hr_hospital.patient"
              parent="hr_hospital.menu_root"
              action="hr_hospital_patient_act_window"/>
</odoo>
